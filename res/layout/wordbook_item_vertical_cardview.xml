<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"  
    xmlns:card_view="http://schemas.android.com/apk/res-auto"  
    android:layout_width="match_parent"  
    android:layout_height="match_parent"  
    android:layout_margin="5dp"  
    android:orientation="horizontal"  
    card_view:cardBackgroundColor="@color/white"  
    card_view:cardCornerRadius="5dp" >  
  
    <LinearLayout  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:paddingTop="5dp" 
        android:paddingBottom="5dp" 
        android:paddingLeft="9dp" 
        android:paddingRight="9dp" 
        android:orientation="vertical"
        >
	    <RelativeLayout  
	        android:layout_width="match_parent"  
	        android:layout_height="wrap_content" 
	        android:layout_weight="1" 
	        >  
	  
	        <TextView  
	            android:id="@+id/wordcard_vertical_tv_word"  
	            android:layout_width="wrap_content"  
	            android:layout_height="wrap_content"  
	            android:layout_marginRight="3dp"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"
	            android:textColor="@color/pink_light_text"  
	            android:textSize="@dimen/text_card_word" />  
	        <TextView  
	            android:id="@+id/wordcard_vertical_tv_phonetic"  
	            android:layout_width="wrap_content"  
	            android:layout_height="wrap_content"  
	            android:layout_toRightOf="@id/wordcard_vertical_tv_word"
	            android:layout_centerVertical="true"
	            android:textColor="@color/gray_light_text"  
	            android:textSize="@dimen/text_card_phonetic" />  
            <ImageButton 
                android:id="@+id/wordcard_vertical_imgbtn_pronounce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/play_gray"
                />
	    </RelativeLayout>  
	    
	    <TextView  
	        android:id="@+id/wordcard_vertical_tv_definition"  
	        android:layout_width="wrap_content"  
	        android:layout_height="wrap_content"  
    	    android:layout_weight="1" 
	        android:gravity="left|bottom"  
	        android:textColor="@color/gray_dark_text"  
	        android:textSize="@dimen/text_card_definition" />  
  
    </LinearLayout>  
</android.support.v7.widget.CardView>  