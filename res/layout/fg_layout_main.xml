<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bubble.simpleword.MainActivity" 
    android:orientation="vertical">


	<Button 
	    android:id="@+id/btn1"
	    android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="创建表"/>
	<Button 
	    android:id="@+id/btn2"
	    android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="添加单词"/>
	<Button 
	    android:id="@+id/btn3"
	    android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="删除单词"/>
	<Button 
	    android:id="@+id/btn4"
	    android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="查询单词"/>
	<Button 
	    android:id="@+id/btn5"
	    android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="编辑单词"/>
	<Button 
	    android:id="@+id/btn6"
	    android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="删除表"/>
	<Button 
	    android:id="@+id/btn7"
	    android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="修改表名"/>
    <TextView 
        android:id="@+id/text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/gray_shadow"
        />
	
</LinearLayout>
